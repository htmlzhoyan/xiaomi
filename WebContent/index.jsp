						if(data.code == 1){
							var infos = data.msg;
							$(infos).each(function(){
								var html = "<li>";
								html +=	"<a href=''>" + this.gradeName +"</a>";
									
								html +=	"	<div class='pop'>";
								html +=	"		<div class='left fl'>";
