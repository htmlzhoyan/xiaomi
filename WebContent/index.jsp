								$(ginfos).each(function(){
									html +=	"			<div>";
									html +=	"				<div class='xuangou_left fl'>";
									html +=	"					<a href='./xiangqing.jsp?name="+this.goodsName+"'>";
									html +=	"						<div class='img fl'><img src='/upload/" + this.imgPath + "' width='40' alt=''></div>";
									html +=	"						<span class='fl'>" + this.goodsName + "</span>";
									html +=	"						<div class='clear'></div>";
									html +=	"					</a>";
									html +=	"				</div>";
									html +=	"				<div class='xuangou_right fr'><a href='./xiangqing.jsp?name="+this.goodsName+"' target='_blank'>选购</a></div>";
									html +=	"				<div class='clear'></div>";
									html +=	"			</div>";
								})
								html +=	"		</div>";
								html +=	"		<div class='clear'></div>";
								html +=	"	</div>";
								html +=	"</li>";
								
